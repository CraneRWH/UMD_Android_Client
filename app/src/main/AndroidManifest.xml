<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ymd.client">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".UApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode">
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
        <!-- android7.0拍照 需要注册FileProvider -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.ymd.client.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- 主页面 -->
        <activity
            android:name=".component.activity.main.MainActivity"
            android:launchMode="singleTop" />

        <!-- 验证码登录 -->
        <activity android:name=".component.activity.login.LoginActivity" />

        <!-- 密码登录 -->
        <activity android:name=".component.activity.login.LoginByPWActivity" />

        <!-- 启动页面 -->
        <activity android:name=".component.activity.login.LogoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 注册页面 -->
        <activity android:name=".component.activity.login.RegisterActivity" />
        <!-- 我的-设置 -->
        <activity android:name=".component.activity.mine.SettingActivity" />
        <!-- 我的-个人信息 -->
        <activity android:name=".component.activity.mine.PersonInfoActivity" />
        <!-- 我的-我的U币 -->
        <activity android:name=".component.activity.mine.MyUbActivity" />
        <!-- 我的-我的收藏 -->
        <activity android:name=".component.activity.mine.MyCollectionActivity" />
        <!-- 我的-我的评价 -->
        <activity android:name=".component.activity.mine.MyRatesActivity" />
        <!-- 我的-我的卡券 -->
        <activity android:name=".component.activity.mine.MyCardsActivity" />
        <!-- 我的-联系客服 -->
        <activity android:name=".component.activity.mine.LinkServiceActivity" />
        <!-- 我的-我的银行卡 -->
        <activity android:name=".component.activity.mine.MyBanksActivity" />
        <!-- 我的-推荐有礼 -->
        <activity android:name=".component.activity.mine.IntroduceActivity" />
        <!-- 我的-我要合作 -->
        <activity android:name=".component.activity.mine.CooperationActivity" />
        <activity
            android:name=".component.activity.order.detail.OrderDetailActivity"
            android:label="@string/title_activity_order_detail"
            android:theme="@style/AppTheme" />
        <activity android:name=".component.activity.homePage.food.NiceFoodActivity" />
        <!-- 我的-设置-修改登陆密码 -->
        <activity android:name=".component.activity.mine.config.AlterLoginPwActivity" />
        <!-- 我的-设置-修改注册手机号 -->
        <activity android:name=".component.activity.mine.config.AlterRegPhoneActivity" />
        <!-- 我的-设置-设置手势密码 -->
        <activity android:name=".component.activity.mine.config.SetGesActivity" />
        <!-- 我的-设置-修改手势密码 -->
        <activity android:name=".component.activity.mine.config.AlterGesActivity" />
        <activity
            android:name=".component.activity.homePage.food.seller.SellerDetailActivity"
            android:label="@string/title_activity_seller_detail"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>