<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <!-- 实心 -->
            <solid android:color="@color/text_gray" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/text_gray" />
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="@dimen/mar_pad_len_8px" />
        </shape>
    </item>
    <item>
        <shape>
            <!-- 实心 -->
            <solid android:color="@color/bg_header" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/bg_header" />
            <!-- 圆角 -->
            <corners android:radius="@dimen/mar_pad_len_8px" />
        </shape>
    </item>
</selector>