<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.activity.mine.SettingActivity">

    <include layout="@layout/layout_title_base" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.ymd.client.component.widget.icindicator.MagicIndicator
            android:id="@+id/my_collection_indicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar_pad_len_88px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/bg_common_gray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/my_collection_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>