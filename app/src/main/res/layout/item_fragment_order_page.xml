<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View style="@style/view_detail_item_separator"
        android:layout_height="@dimen/mar_pad_len_10px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/mar_pad_len_20px"
        >
        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="@dimen/mar_pad_len_90px"
            android:layout_height="@dimen/mar_pad_len_90px"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_icon"
            />
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_size_32px_black"
            android:layout_margin="@dimen/mar_pad_len_20px"
            />
        <TextView
            android:id="@+id/product_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_pad_len_20px"
            style="@style/font_size_28px_gray_" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/status_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_size_28px_green"
            android:layout_margin="@dimen/mar_pad_len_20px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/mar_pad_len_130px"
        >
        <View style="@style/view_detail_item_separator" />
        <LinearLayout
            android:id="@+id/product_list_lt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_pad_len_10px"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right|bottom"
        android:layout_marginTop="@dimen/mar_pad_len_30px"
        android:layout_marginRight="@dimen/mar_pad_len_20px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_size_24px_gray_"
            android:text="奖励："
            />
        <TextView
            android:id="@+id/u_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_size_30px_green"
            android:layout_marginRight="@dimen/mar_pad_len_64px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_size_24px_gray_"
            android:text="共"
            />
        <TextView
            android:id="@+id/all_product_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_size_24px_gray_"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_size_24px_gray_"
            android:text="件商品，实付"
            />
        <TextView
            android:id="@+id/pay_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_size_30px_black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right|bottom"
        android:layout_marginTop="@dimen/mar_pad_len_30px"
        android:layout_marginRight="@dimen/mar_pad_len_20px"
        android:layout_marginBottom="@dimen/mar_pad_len_20px"
        >
        <Button
            android:id="@+id/btn1"
            android:layout_width="@dimen/mar_pad_len_168px"
            android:layout_height="@dimen/mar_pad_len_64px"
            android:background="@mipmap/rect_white_bg_icon"
            android:textColor="@color/text_gray_dark"
            android:textSize="@dimen/text_size_26px"
            android:layout_marginRight="@dimen/mar_pad_len_30px"
            android:text="相似商家"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="@dimen/mar_pad_len_168px"
            android:layout_height="@dimen/mar_pad_len_64px"
            android:background="@mipmap/rect_white_bg_icon"
            android:textColor="@color/text_gray_dark"
            android:textSize="@dimen/text_size_26px"
            android:layout_marginRight="@dimen/mar_pad_len_30px"
            android:text="再来一单"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="@dimen/mar_pad_len_168px"
            android:layout_height="@dimen/mar_pad_len_64px"
            android:background="@mipmap/rect_orange_bg_icon"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_26px"
            android:text="评价"
            />
    </LinearLayout>
</LinearLayout>