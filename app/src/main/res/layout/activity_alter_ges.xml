<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.activity.mine.config.AlterGesActivity">

    <include layout="@layout/layout_title_base" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/bg_common_gray" />

    <TextView
        android:id="@+id/verify_gesture_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mar_pad_len_80px"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mar_pad_len_22px"
        android:orientation="vertical">

        <com.ymd.client.component.widget.lock.LockPatternView
            android:id="@+id/verify_gesture_lock"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_96px"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/mar_pad_len_44px">

            <TextView
                android:id="@+id/verify_gesture_forget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/mar_pad_len_10px"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingRight="@dimen/mar_pad_len_10px"
                android:text="@string/gesture_forget_gesture"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/verify_gesture_other"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/mar_pad_len_10px"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="@dimen/mar_pad_len_10px"
                android:text="@string/gesture_other"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>