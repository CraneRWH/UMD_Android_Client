<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/mar_pad_len_10px"
        android:paddingBottom="@dimen/mar_pad_len_10px"
        android:paddingLeft="@dimen/mar_pad_len_20px"
        android:paddingRight="@dimen/mar_pad_len_20px"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/icon_iv"
                android:layout_width="@dimen/mar_pad_len_168px"
                android:layout_height="@dimen/mar_pad_len_168px"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/mar_pad_len_20px"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_32px"
                        android:text="兰州拉面"
                        android:lines="2"
                        android:ellipsize="end"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/font_size_24px_gray_"
                    android:text="兰州拉面"
                    android:layout_marginTop="@dimen/mar_pad_len_10px"
                    android:lines="1"
                    android:ellipsize="end"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/mar_pad_len_10px"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_size_24px_gray_"
                        android:text="月销"
                        />
                    <TextView
                        android:id="@+id/sale_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_size_24px_gray_"
                        android:text="300"
                        android:layout_marginLeft="@dimen/mar_pad_len_10px"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/mar_pad_len_10px"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/text_orange"
                            android:textSize="@dimen/text_size_32px"
                            android:text="¥"
                            />
                        <TextView
                            android:id="@+id/now_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/text_orange"
                            android:textSize="@dimen/text_size_32px"
                            android:text="19.01"
                            />

                        <TextView
                            android:id="@+id/old_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/text_gray_dark"
                            android:textSize="@dimen/text_size_24px"
                            android:text="¥33.1"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/sub_btn"
                            android:layout_width="@dimen/mar_pad_len_50px"
                            android:layout_height="@dimen/mar_pad_len_50px"
                            android:src="@mipmap/sub_circle_gray_icon"
                            android:layout_marginRight="@dimen/mar_pad_len_20px"
                            android:visibility="invisible"
                            />
                        <TextView
                            android:id="@+id/num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray_dark"
                            android:textSize="@dimen/text_size_32px"
                            android:text="1"
                            android:visibility="invisible"
                            />
                        <ImageView
                            android:id="@+id/add_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_merchant_plus"
                            android:layout_marginLeft="@dimen/mar_pad_len_20px"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>