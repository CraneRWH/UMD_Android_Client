<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title_base" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/bg_common_gray" />

    <com.ymd.client.component.widget.lock.LockPatternIndicator
        android:id="@+id/set_gesture_lock_indicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/mar_pad_len_80px"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/set_gesture_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/create_gesture_default"
        android:textColor="#a5a5a5"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.ymd.client.component.widget.lock.LockPatternView
            android:id="@+id/set_gesture_lock"
            android:layout_width="270dp"
            android:layout_height="270dp" />

        <Button
            android:id="@+id/set_gesture_reset"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:text="@string/create_gesture_reset"
            android:textColor="#a5a5a5"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
