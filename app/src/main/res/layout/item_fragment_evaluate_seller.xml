<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/mar_pad_len_30px"
        android:paddingLeft="@dimen/mar_pad_len_20px"
        android:paddingRight="@dimen/mar_pad_len_20px"
        android:paddingTop="@dimen/mar_pad_len_20px">
        >

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="@dimen/mar_pad_len_88px"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:src="@mipmap/app_icon"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_pad_len_20px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shop_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="兰州拉面"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_26px" />

                <TextView
                    android:id="@+id/date_tv"
                    style="@style/font_size_24px_gray_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="224m" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mar_pad_len_20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_size_24px_gray_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分：" />

                <com.idlestar.ratingstar.RatingStarView
                    android:id="@+id/scoreBarView"
                    app:cornerRadius="4dp"
                    app:starMargin="@dimen/mar_pad_len_6px"
                    app:strokeWidth="4px"
                    app:strokeColor="@color/bg_header"
                    app:starForegroundColor="@color/bg_header"
                    app:starBackgroundColor="#E8E8E8"
                    app:starNum="5"
                    app:rating="1"
                    app:starThickness="0.7"
                    app:drawStrokeForEmptyStar="false"
                    app:drawStrokeForHalfStar="false"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mar_pad_len_20px" />
            </LinearLayout>

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mar_pad_len_20px"
                android:text="兰州拉面"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24px" />

            <LinearLayout
                android:id="@+id/image_llt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/mar_pad_len_20px"
                android:paddingBottom="@dimen/mar_pad_len_20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_my_rate_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mar_pad_len_20px"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/item_my_rate_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mar_pad_len_20px"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/item_my_rate_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/replay_llt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mar_pad_len_20px"
                android:background="@color/text_gray"
                android:orientation="horizontal"
                android:padding="@dimen/mar_pad_len_20px">

                <TextView
                    android:id="@+id/seller_replay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/text_size_22px" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/view_detail_item_separator"
        android:layout_height="@dimen/mar_pad_len_10px" />
</LinearLayout>