<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.activity.mine.SettingActivity">

    <include layout="@layout/layout_title_base" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_collaborate_banner" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_pad_len_88px"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/mar_pad_len_20px"
        android:paddingRight="@dimen/mar_pad_len_20px"
        android:text="商家信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_pad_len_88px"
        android:background="@drawable/coo_background_with_line"
        android:layout_marginLeft="@dimen/mar_pad_len_20px"
        android:layout_marginRight="@dimen/mar_pad_len_20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/mar_pad_len_20px"
            android:paddingRight="@dimen/mar_pad_len_20px"
            android:textColor="@color/text_gray_dark"
            android:text="店主姓名：" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/common_text_color"
            android:text="张三" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_pad_len_88px"
        android:background="@drawable/coo_background_with_line"
        android:layout_marginLeft="@dimen/mar_pad_len_20px"
        android:layout_marginRight="@dimen/mar_pad_len_20px"
        android:layout_marginTop="@dimen/mar_pad_len_20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/mar_pad_len_20px"
            android:paddingRight="@dimen/mar_pad_len_20px"
            android:textColor="@color/text_gray_dark"
            android:text="联系电话：" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray_dark"
            android:text="13612121214" />
    </LinearLayout>

</LinearLayout>