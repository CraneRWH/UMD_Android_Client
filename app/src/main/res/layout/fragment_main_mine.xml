<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common_gray"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".component.activity.mine.MainMineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingTop="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px"
            android:paddingBottom="@dimen/mar_pad_len_26px">

            <com.ymd.client.component.widget.CircleImageView
                android:id="@+id/fragment_person_iv"
                android:layout_width="@dimen/mar_pad_len_105px"
                android:layout_height="@dimen/mar_pad_len_105px"
                android:layout_gravity="center"
                android:src="@mipmap/app_icon"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/mar_pad_len_4px"
                app:civ_fill_color="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/mar_pad_len_20px"
                android:paddingRight="@dimen/mar_pad_len_20px">

                <TextView
                    android:id="@+id/fragment_person_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_32px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/fragment_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mar_pad_len_16px"
                    android:background="@drawable/fragment_main_person_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/mar_pad_len_10px"
                    android:paddingRight="@dimen/mar_pad_len_10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_person"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_28px" />

                    <ImageView
                        android:layout_width="@dimen/mar_pad_len_28px"
                        android:layout_height="@dimen/mar_pad_len_28px"
                        android:layout_marginLeft="@dimen/mar_pad_len_5px"
                        android:src="@mipmap/icon_mine_person" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fragment_setting"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/fragment_mine_sign" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mar_pad_len_5px"
                        android:text="签到中心"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_32px" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/mar_pad_len_16px"
                    android:src="@mipmap/fragnemt_mine_info" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_176px"
            android:layout_marginBottom="@dimen/mar_pad_len_22px"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px">

            <LinearLayout
                android:id="@+id/fragment_mine_my_ub"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/view_click"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/fragnemt_mine_ub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/mar_pad_len_16px"
                    android:text="我的U币"
                    android:textColor="@color/default_text_gray"
                    android:textSize="@dimen/mar_pad_len_32px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mine_my_collection"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/view_click"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/fragnemt_mine_collect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/mar_pad_len_16px"
                    android:text="收藏"
                    android:textColor="@color/default_text_gray"
                    android:textSize="@dimen/mar_pad_len_32px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mine_my_rate"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/view_click"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/fragnemt_mine_rate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/mar_pad_len_16px"
                    android:text="评价"
                    android:textColor="@color/default_text_gray"
                    android:textSize="@dimen/mar_pad_len_32px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mine_my_member"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/view_click"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/fragnemt_mine_member" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/mar_pad_len_16px"
                    android:text="会员卡"
                    android:textColor="@color/default_text_gray"
                    android:textSize="@dimen/mar_pad_len_32px" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingTop="@dimen/mar_pad_len_30px"
            android:paddingRight="@dimen/mar_pad_len_22px"
            android:paddingBottom="@dimen/mar_pad_len_30px"
            android:text="常用功能"
            android:textColor="@color/black"
            android:textSize="@dimen/mar_pad_len_32px"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/fragment_mine_banks"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:background="@drawable/view_click"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/fragnemt_mine_bank" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/mar_pad_len_22px"
                android:text="@string/fragment_my_banks"
                android:textColor="@color/default_text_gray"
                android:textSize="@dimen/text_size_32px" />

            <ImageView style="@style/default_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_mine_introduce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:background="@drawable/view_click"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/fragnemt_mine_introduce" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/mar_pad_len_22px"
                android:text="@string/fragment_intro"
                android:textColor="@color/default_text_gray"
                android:textSize="@dimen/text_size_32px" />

            <ImageView style="@style/default_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_mine_cooperation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:background="@drawable/view_click"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/fragnemt_mine_coo" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/mar_pad_len_22px"
                android:text="@string/fragment_coop"
                android:textColor="@color/default_text_gray"
                android:textSize="@dimen/text_size_32px" />

            <ImageView style="@style/default_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_mine_links"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:background="@drawable/view_click"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/fragnemt_mine_link" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/mar_pad_len_22px"
                android:text="@string/fragment_links"
                android:textColor="@color/default_text_gray"
                android:textSize="@dimen/text_size_32px" />

            <ImageView style="@style/default_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_mine_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:background="@drawable/view_click"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/fragnemt_mine_update" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/mar_pad_len_22px"
                android:text="版本更新"
                android:textColor="@color/default_text_gray"
                android:textSize="@dimen/text_size_32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_main_person_bg"
                android:paddingLeft="@dimen/mar_pad_len_22px"
                android:paddingRight="@dimen/mar_pad_len_22px"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_26px"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_20px"
            android:background="@color/white"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_pad_len_20px"
            android:background="@color/white"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingTop="@dimen/mar_pad_len_30px"
            android:paddingRight="@dimen/mar_pad_len_22px"
            android:paddingBottom="@dimen/mar_pad_len_30px"
            android:text="账号设置"
            android:textColor="@color/black"
            android:textSize="@dimen/mar_pad_len_32px"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/setting_alter_pw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:background="@drawable/view_click"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/fragnemt_mine_pw" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/mar_pad_len_22px"
                android:text="@string/setting_alter_pw"
                android:textColor="@color/default_text_gray"
                android:textSize="@dimen/text_size_32px" />

            <ImageView style="@style/default_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_alter_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:background="@drawable/view_click"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/fragnemt_mine_register" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/mar_pad_len_22px"
                android:text="@string/setting_alter_phone"
                android:textColor="@color/default_text_gray"
                android:textSize="@dimen/text_size_32px" />

            <ImageView style="@style/default_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_mine_my_cards"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:background="@drawable/view_click"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_pad_len_22px"
            android:paddingRight="@dimen/mar_pad_len_22px"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_me_ticket" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/mar_pad_len_22px"
                android:text="@string/fragment_my_cards"
                android:textColor="@color/default_text_gray"
                android:textSize="@dimen/text_size_32px" />

            <ImageView style="@style/default_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_pad_len_20px"
            android:background="@color/white"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/setting_logout"
            style="@style/org_btn_bg"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mar_pad_len_22px"
            android:layout_marginTop="@dimen/mar_pad_len_22px"
            android:layout_marginRight="@dimen/mar_pad_len_22px"
            android:layout_marginBottom="@dimen/mar_pad_len_22px"
            android:text="@string/setting_logout" />
    </LinearLayout>
</ScrollView>