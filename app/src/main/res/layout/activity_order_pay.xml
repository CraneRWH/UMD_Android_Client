<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.activity.order.pay.OrderPayActivity">
    <include layout="@layout/header_white_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_order_pay_head"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/mar_pad_len_40px"
                android:background="@color/white"
                android:paddingBottom="@dimen/text_size_30px"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_size_24px_gray_"
                        android:text="支付剩余时间"
                        />
                    <TextView
                        android:id="@+id/remnant_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_size_24px_gray_"
                        android:text="14:42"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/mar_pad_len_24px"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_text_color"
                        android:textSize="@dimen/text_size_60px"
                        android:text="¥"
                        />
                    <TextView
                        android:id="@+id/order_money_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_text_color"
                        android:textSize="@dimen/text_size_60px"
                        android:text="14.42"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/mar_pad_len_20px"
                    >
                    <TextView
                        android:id="@+id/shop_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray_dark"
                        android:textSize="@dimen/mar_pad_len_22px"
                        android:text="叫了只炸鸡（大观园店）"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray_dark"
                        android:textSize="@dimen/mar_pad_len_22px"
                        android:text="-"
                        />
                    <TextView
                        android:id="@+id/order_code_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray_dark"
                        android:textSize="@dimen/mar_pad_len_22px"
                        android:text="2124123542365"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mar_pad_len_20px"
                android:background="@color/text_gray"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/mar_pad_len_20px"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/pay_type_iv1"
                        android:layout_width="@dimen/mar_pad_len_80px"
                        android:layout_height="@dimen/mar_pad_len_80px"
                        android:src="@mipmap/icon_payoptions_zhi"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/mar_pad_len_20px"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pay_name_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_size_32px_black"
                            android:text="招商银行"
                            />
                        <TextView
                            android:id="@+id/pay_type_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_size_26px_black"
                            android:layout_marginTop="@dimen/mar_pad_len_16px"
                            android:text="信用卡（2546）"
                            />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/choose_iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_payoptions_oval"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/mar_pad_len_20px"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/pay_type_iv2"
                        android:layout_width="@dimen/mar_pad_len_80px"
                        android:layout_height="@dimen/mar_pad_len_80px" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/mar_pad_len_20px"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/font_size_32px_black"
                            android:text="使用新卡支付"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/mar_pad_len_30px"
                            android:textSize="@dimen/text_size_22px"
                            android:background="@color/main_red"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:text="笔笔抽取现金红包"
                            android:layout_marginTop="@dimen/mar_pad_len_22px"
                            />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/choose_iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_payoptions_oval"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mar_pad_len_20px"
                android:background="@color/text_gray"
                />
            <LinearLayout
                android:id="@+id/pay_type_lt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ></LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom"
        android:background="@color/bg_header"
        android:padding="@dimen/mar_pad_len_28px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_36px"
            android:textColor="@color/white"
            android:text="确认支付"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_60px"
            android:textColor="@color/white"
            android:text="¥"
            />
        <TextView
            android:id="@+id/order_money_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_60px"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>