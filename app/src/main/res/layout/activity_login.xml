<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_umd"
                android:layout_marginTop="@dimen/mar_pad_len_50px"
                android:layout_gravity="center_horizontal"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mar_pad_len_50px"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+86"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_36px" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/dao_sanjiao_black_icon"
                        android:visibility="gone"/>

                    <EditText
                        android:id="@+id/mobileNumber"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_36px" />
                </LinearLayout>
                <View style="@style/view_detail_item_separator"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mar_pad_len_20px"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="验证码"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/mobileCode"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入验证码"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_36px" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mobileCodeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/mar_pad_len_18px"
                        android:paddingBottom="@dimen/mar_pad_len_18px"
                        android:paddingLeft="@dimen/mar_pad_len_30px"
                        android:paddingRight="@dimen/mar_pad_len_30px"
                        android:background="@color/bg_header"
                        android:text="获取验证码"
                        android:textSize="@dimen/text_size_32px"
                        android:textColor="#fefefe" />
                </LinearLayout>

                <View style="@style/view_detail_item_separator"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:text="温馨提示:未注册XX账号的手机号，登录时将自动注册"
                android:textColor="@color/text_gray"
                android:visibility="gone"
                android:textSize="12sp" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/mar_pad_len_100px"
                android:layout_marginRight="@dimen/mar_pad_len_100px"
                android:layout_marginLeft="@dimen/mar_pad_len_100px"
                android:background="@color/bg_header"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36px" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/mar_pad_len_70px"
                android:layout_marginLeft="@dimen/mar_pad_len_70px"
                >
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="自动登录"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:checked="false"
                    android:visibility="gone"
                    android:paddingLeft="5dp"
                    />
                <TextView
                    android:id="@+id/register_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册账号"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_26px"
                    android:padding="@dimen/mar_pad_len_30px"
                    />
                <TextView
                    android:id="@+id/forget_password_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_size_26px"
                    android:padding="@dimen/mar_pad_len_30px"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/view_detail_item_separator"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@color/bg_header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:text="第三方登录"
            android:textSize="@dimen/text_size_26px"
            android:textColor="@color/bg_header" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weixin_iv"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@mipmap/weixin_green_circle_icon" />

        <ImageView
            android:id="@+id/qq_iv"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@mipmap/qq_blue_circle_icon" />

        <ImageView
            android:id="@+id/weibo_iv"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:padding="20dp"
            android:layout_weight="1"
            android:src="@mipmap/weibo_red_circle_icon" />
    </LinearLayout>
</LinearLayout>
