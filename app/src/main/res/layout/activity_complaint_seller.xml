<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".component.activity.homePage.merchant.CommentSellerActivity">
    <include layout="@layout/header_white_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/mar_pad_len_30px"
                android:layout_marginBottom="@dimen/mar_pad_len_30px"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家名称"
                    android:textSize="@dimen/text_size_30px"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/mar_pad_len_24px"
                    />
                <TextView
                    android:id="@+id/merchant_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_30px"
                    android:textColor="@color/text_gray2"
                    android:layout_marginLeft="@dimen/mar_pad_len_40px"
                    />
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/complaintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mar_pad_len_20px"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容描述："
                style="@style/font_size_32px_black"
                android:layout_marginLeft="@dimen/mar_pad_len_20px"
                android:layout_marginTop="@dimen/mar_pad_len_30px"
                android:layout_marginBottom="@dimen/mar_pad_len_30px"
                android:visibility="gone"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mar_pad_len_20px"
                android:layout_marginLeft="@dimen/mar_pad_len_20px"
                android:layout_marginTop="@dimen/mar_pad_len_30px"
                >
                <EditText
                    android:id="@+id/comment_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="8"
                    android:hint="请填写投诉信息"
                    android:textSize="@dimen/text_size_26px"
                    android:textColor="@color/text_gray2"
                    android:gravity="top"
                    android:background="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最多输入150个字"
                    style="@style/font_size_24px_gray_"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传图片："
                style="@style/font_size_32px_black"
                android:layout_marginLeft="@dimen/mar_pad_len_20px"
                android:layout_marginTop="@dimen/mar_pad_len_40px"
                android:layout_marginBottom="@dimen/mar_pad_len_10px"
                android:visibility="gone"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/picture_gv"
                android:layout_margin="@dimen/mar_pad_len_18px"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@mipmap/icon_submit_orange_bg"
        android:padding="@dimen/mar_pad_len_10px"
        android:textSize="@dimen/text_size_32px"
        android:textColor="@color/white"
        android:layout_margin="@dimen/mar_pad_len_20px"
        />
</LinearLayout>