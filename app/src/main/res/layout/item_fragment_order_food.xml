<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mar_pad_len_132px"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/mar_pad_len_24px"
        >
        <ImageView
            android:id="@+id/food_icon_iv"
            android:layout_width="@dimen/mar_pad_len_88px"
            android:layout_height="@dimen/mar_pad_len_88px"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_icon"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/mar_pad_len_24px"
            >
            <TextView
                android:id="@+id/food_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_32px"
                android:textColor="@color/text_gray2"
                android:text="独一处"
                />
            <TextView
                android:id="@+id/food_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mar_pad_len_24px"
                android:textSize="@dimen/text_size_26px"
                android:textColor="@color/text_gray2"
                />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_26px"
            android:textColor="@color/bg_header"
            android:text="¥"
            />
        <TextView
            android:id="@+id/food_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_32px"
            android:textColor="@color/bg_header"
            android:text="36"
            />
    </LinearLayout>
    <View style="@style/view_detail_item_separator"/>
</LinearLayout>