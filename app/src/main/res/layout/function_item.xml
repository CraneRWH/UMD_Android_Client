<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/mar_pad_len_20px"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mar_pad_len_10px"
        android:layout_marginRight="@dimen/mar_pad_len_10px"
        >
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            />
        <View
            android:id="@+id/itemWarnText"
            android:layout_height="6dp"
            android:layout_width="6dp"
            android:layout_gravity="right|top"
            android:background="@drawable/shape_red_circle_litile"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/itemWarnNumText"
                android:layout_height="15dp"
                android:layout_width="wrap_content"
                android:minWidth="15dp"
                android:textColor="@color/white"
                android:text="2"
                android:textSize="10sp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:gravity="center"
                android:background="@drawable/shape_red_circle"
                android:singleLine="true"
                android:visibility="gone"
                />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/itemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="主页"
        android:textSize="@dimen/text_size_24px"
        android:layout_marginTop="@dimen/mar_pad_len_20px"
        />
</LinearLayout>
