<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="@dimen/mar_pad_len_300px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="@dimen/mar_pad_len_20px"
    android:layout_marginRight="@dimen/mar_pad_len_10px"
    android:layout_marginLeft="@dimen/mar_pad_len_20px"
    android:layout_marginBottom="@dimen/mar_pad_len_20px"
    >
    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_pad_len_200px"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mar_pad_len_10px"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_26px"
        android:textColor="@color/common_text_color"
        />
    <TextView
        android:id="@+id/sale_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mar_pad_len_10px"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_22px"
        android:textColor="@color/text_gray_dark"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/mar_pad_len_20px"
        android:gravity="bottom"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/mar_pad_len_10px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_size_28px"
                android:text="Â¥"
                />
            <TextView
                android:id="@+id/now_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_size_28px"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/sub_btn"
                android:layout_width="@dimen/mar_pad_len_50px"
                android:layout_height="@dimen/mar_pad_len_50px"
                android:src="@mipmap/sub_circle_gray_icon"
                android:padding="@dimen/mar_pad_len_10px"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_dark"
                android:textSize="@dimen/text_size_32px"
                android:text="1"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/buy_btn"
                android:layout_width="@dimen/mar_pad_len_50px"
                android:layout_height="@dimen/mar_pad_len_50px"
                android:src="@mipmap/icon_merchant_plus"
                android:padding="@dimen/mar_pad_len_10px"
                android:layout_marginRight="@dimen/mar_pad_len_10px"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>